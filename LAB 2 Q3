#include <iostream>

using namespace std;

int main() {
    char char1, char2, char3;

    //  asking the user to input for three characters
    cout << "Enter the first character: ";
    cin >> char1;

    cout << "Enter the second character: ";
    cin >> char2;

    cout << "Enter the third character: ";
    cin >> char3;

    // Sorting  the characters in ascending order 
    if (char1 > char2) {
        char temp = char1;
        char1 = char2;
        char2 = temp;
    }

    if (char2 > char3) {
        char temp = char2;
        char2 = char3;
        char3 = temp;
    }

    if (char1 > char2) {
        char temp = char1;
        char1 = char2;
        char2 = temp;
    }

    //  this is going to show the output the characters in ascending order
    cout << "The characters in ascending order are: " << char1 << ", " << char2 << ", " << char3 << endl;

    return 0;
}
