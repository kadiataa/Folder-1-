#include <iostream>

int main() {
    // Declare variables to store the numbers
    double num1 = 578;
    double num2 = 986;
    double num3 = 1066;
    double num4 = 714;

    // Calculate sum
    double sum = num1 + num2 + num3 + num4;

    // Calculate average
    double average = sum / 4;

    // Display sum
    std::cout << "The sum of those numbers is " << sum << "." << std::endl;

    // Display average
    std::cout << "The average of those numbers is " << average << "." << std::endl;

    return 0;
}
