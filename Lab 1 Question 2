#include <iostream>

int main() {
    //  Here we are declaring variables so i can store them to use later 
    double num1 = 578;
    double num2 = 986;
    double num3 = 1066;
    double num4 = 714;

    // were adding the numbers up to find the sum
    double sum = num1 + num2 + num3 + num4;

    // the average 
    double average = sum / 4;

    // here were displaying the sum 
    std::cout << "The sum of those numbers is " << sum << "." << std::endl;

    // showing the average 
    std::cout << "The average of those numbers is " << average << "." << std::endl;

    return 0;
}
