#include <iostream>

int main() {
    //  Here im declaring the  variables to store the numbers
    double num1, num2, num3, num4;

    // asking the user for the numbers 
    std::cout << "Enter the first number: ";
    std::cin >> num1;

    std::cout << "Enter the second number: ";
    std::cin >> num2;

    std::cout << "Enter the third number: ";
    std::cin >> num3;

    std::cout << "Enter the fourth number: ";
    std::cin >> num4;

    // here were adding everything together to get the sum 
    double sum = num1 + num2 + num3 + num4;

    // here were getting the average by dividing 
    double average = sum / 4;

    // this will show us the average 
    std::cout << "The average of these numbers is: " << average << std::endl;

    return 0;
}

